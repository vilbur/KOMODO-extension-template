<page
	id="TemplateExtension-pane"
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
	onload="ko.extensions.TemplateExtension.Pane.init();" >

    <script type="application/x-javascript" src="chrome://komodo/content/library/less_loader.js"/>
	
    <script type="application/x-javascript" src="chrome://TemplateExtension/content/js/TemplateExtension.js"/>
    <script type="application/x-javascript" src="chrome://TemplateExtension/content/js/Pane/Pane.js"/>
    <script type="application/x-javascript" src="chrome://TemplateExtension/content/js/Controls/Controls.js"/>
    <script type="application/x-javascript" src="chrome://TemplateExtension/content/js/Controls/Control/Control.js"/>	

	<hbox>
		<vbox>
			<button
				class="box-inherit button-menubutton-button"
				label="getControlsValues()"
				oncommand="ko.extensions.TemplateExtension.Pane.Controls.getControlsValues();" 
			/>
			<textbox id="te_text_test" value=""/>
		</vbox>
		
		<vbox>
			<button type="menu"
					label="&menu.label;"
					class="pane-text">
				<menupopup>
					<menuitem
						label="Items A"
						oncommand="new ko.extensions.TemplateExtension.Controls( 'switch_controls' ).add( 'checkbox', ['Checkbox A 1', 'Checkbox A 2'] );"
					/>
					<menuitem
						label="Items B"
						oncommand="new ko.extensions.TemplateExtension.Controls( 'switch_controls' ).add( 'checkbox', ['Checkbox B 1', 'Checkbox B 2'] );"
					/>
					<menuitem
						label="Empty"
						oncommand="new ko.extensions.TemplateExtension.Controls( 'switch_controls' ).empty();"
					/>
				</menupopup>
			</button>
			<box id="switch_controls" orient="vertical">
				<checkbox id="te_cbx_test_A1" label="Test A 1"/>
				<checkbox id="te_cbx_test_A2" label="Test A 2"/>
			</box>
			
		</vbox>

		<!--<button label="Change" oncommand="ko.extensions.TemplateExtension.Pane.toggleCheckbox('te_cbx_text')"/>-->
		<!--<checkbox id="te_cbx_text" label="Check for messages"/>-->


		
	</hbox>
	
</page>